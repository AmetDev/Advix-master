generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Connect {
  id          Int    @id @default(autoincrement())
  token       String @unique
  telegram_id BigInt
}

model PriceObjects {
  id             Int       @id @default(autoincrement())
  price          BigInt
  time           Int
  hot            Boolean
  for_hot        Boolean
  hot_date       DateTime?
  currently_date DateTime?
  id_channel     Channel   @relation(fields: [id], references: [id])
}

model Channel {
  id                     Int            @id @default(autoincrement())
  User_id                Int
  Category               String
  language               String
  name_channel           String
  id_telegram            BigInt         @unique
  desc_channel           String
  link_Cannel            String
  link_Type_Boolean      Boolean
  url_Image_Channel      String?
  url_background_channel String?
  verified               String?
  selected               Int?
  public_type            Boolean
  count_subscribers      Int
  views                  Int
  reactions              Int
  posts_count            Int
  ERR                    Decimal?
  position               Int?
  default_price          Int
  default_time_day       Int
  hot_price              Int
  CPM                    Int
  hot_state              Boolean
  is_published           Boolean        @default(false)
  user                   User           @relation(fields: [User_id], references: [User_id])
  priceObjects           PriceObjects[]
}

model User {
  User_id     Int       @id @default(autoincrement())
  id_telegram BigInt    @unique
  is_premium  Boolean
  link_image  String?
  user_name   String    @unique
  channels    Channel[]
}
