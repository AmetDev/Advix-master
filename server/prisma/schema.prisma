generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Connect {
  id          Int    @id @default(autoincrement())
  token       String @unique
  telegram_id Int
}

model Channel {
  id                Int      @id @default(autoincrement())
  User_id           Int
  Category          String
  language          String
  name_channel      String
  id_telegram       BigInt   @unique
  desc_channel      String
  link_Cannel       String
  link_Type_Boolean Boolean
  url_Image_Channel String
  public_type       Boolean
  count_subscribers Int
  count_views       Int
  ERR               Int
  position          Int
  default_price     Int
  default_time_day  Int
  hot_price         Int
  CPM               Int
  hot_state         Boolean
  hot_date          DateTime
  currently_date    DateTime

  user User @relation(fields: [User_id], references: [User_id])
}

model User {
  User_id     Int       @id @default(autoincrement())
  id_telegram BigInt    @unique
  link_image  String
  user_name   String    @unique
  channels    Channel[]
}
